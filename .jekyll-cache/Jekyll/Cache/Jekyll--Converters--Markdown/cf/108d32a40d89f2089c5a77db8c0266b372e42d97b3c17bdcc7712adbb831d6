<span class="nv">$QUERY</span> <span class="o">=</span> <span class="s2">"SELECT * FROM iamceo_category WHERE CAT_DEPTH='2' AND LEFT(CAT_NUM,3)='"</span><span class="o">.</span><span class="nb">substr</span><span class="p">(</span><span class="nv">$SCAT_NUM1</span><span class="p">,</span><span class="mi">0</span><span class="p">,</span><span class="mi">3</span><span class="p">)</span><span class="o">.</span><span class="s2">"' ORDER BY GID DESC"</span><span class="p">;</span>
