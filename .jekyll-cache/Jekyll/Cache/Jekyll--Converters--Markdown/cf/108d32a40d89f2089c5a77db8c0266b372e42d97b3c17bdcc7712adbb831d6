      <span class="nv">@pairs</span> <span class="o">=</span> <span class="nb">split</span><span class="p">(</span><span class="sr">/&amp;/</span><span class="p">,</span> <span class="nv">$buffer</span><span class="p">);</span>

      <span class="k">foreach</span> <span class="nv">$pair</span> <span class="p">(</span><span class="nv">@pairs</span><span class="p">)</span>  <span class="p">{</span>
